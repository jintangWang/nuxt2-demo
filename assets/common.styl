html
  font-family Helvetica, Arial, sans-serif
  font-size 16px
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  height 100%
  overflow-x hidden
body
  overflow-x hidden
*,
*:before,
*:after
  box-sizing border-box
  margin 0
  padding: 0

input, button
  outline none
  border: 0
  box-shadow none
  &:focus
    outline none

ul
  list-style none

video
  display block


.drop-box
  width 133px
  border-radius 0

.container, .container-fluid
  figure
    padding 0
    margin-bottom 0
    overflow hidden
  figure>img
    width 100%

.star-text
  color #ce292d

// 垂直居中
.v-center
  position: absolute
  top: 50%
  transform translateY(-50%)
// 水平垂直居中
.center
  position: absolute
  top: 50%
  left: 50%
  transform translate(-50%)

// 清除浮动
.clearfix:after
  content: ""
  display: block
  height: 0
  clear: both
  visibility: hidden

// 左上角蓝色短横线
.left-top-line
  position: relative
  &:before
    position absolute
    top: -3px
    display block
    content: ''
    width: 30px
    height: 3px
    background-color: #008fd7

// 子页面相关公用样式
.article-title
  font-family: Raleway-ExtraBold
  font-size: 24px
  font-weight: 800
  line-height: 1.25
  color: #333333
  text-transform uppercase
  @media (max-width: 1024px)
    font-size 20px
    font-weight: 600
.article-content
  font-family: OpenSans
  font-size: 13px
  line-height: 1.54
  color: #777777
.rich-content
  p
    padding-bottom 0
  p, span
    color: #333
    font-size 14px
    line-height 1.8
    word-break break-word
  img
    margin-left auto
    margin-right auto



//  图片放大效果，只在pc下生效
@media (min-width: 1025px)
  .scale-img
    transition: all 0.5s ease-in-out 0s
    &:hover
      transform: scale(1.15)
      opacity: 0.9
  .pc-show
    display block
  .pc-hide
    display none
@media (max-width: 1024px)
  .mobile-show
    display block
  .mobile-hide
    display none
@media (max-width: 767px)
  .phone-show
    display block
  .phone-hide
    display none

@media (min-width: 768px) and (max-width: 1024px)
  .container
    padding-left: 0
    padding-right 0


// 页面过渡动效设置
.page-enter-active, .page-leave-active
  transition: opacity .5s
.page-enter, .page-leave-active
  opacity: 0.8
