// service、info center、faq 详情页样式
.info-detail-container
  background #efefef
  .container
    display flex
    margin-top: 70px
  figure img
    width 100%
  .title
    margin-top 20px
    font-family Raleway-Bold
    font-size: 18px
    font-weight: bold
    color: #333333
    margin-bottom 10px
  .time
    font-family "Open Sans"
    font-size 14px
    color: #666
    margin-bottom 20px
    font-weight 800
  .detail-container
    display flex
    flex-direction column
    width: 70%
    padding-bottom: 60px
    @media (max-width: 767px)
      width: 100%
    .content
      font-family: OpenSans
      font-size: 13px
      line-height: 1.54
      color: #777777
