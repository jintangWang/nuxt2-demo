// service、infocenter、faq的一级列表
.info-container
  .bottom-line:after
    content ''
    display block
    width: 30px
    height: 3px
    background-color: #008fd7
    margin 0 auto
  /*.container*/
  .product-section
    padding-top 70px
    padding-bottom 60px
  .solution-section
    background no-repeat center/100% 100% url("~assets/img/submenu/ser-bg-03.png")
    height 388px
    display flex
    align-items center
    .solution-content
      display flex
      flex-direction column
      justify-content center
    h4
      font-family: Raleway-SemiBold
      font-size: 15px
      font-weight: 600
      line-height: 1.67
      color: #333333

  .application-section
    padding-top 68px
    padding-bottom 48px
    .application-ul
      margin-top 50px
      li
        display flex
        margin-top 8px
      h4
        font-family: Raleway-Bold
        font-size: 18px
        font-weight: bold
        color: #333333
        margin-bottom 22px
    .check-mark
      width: 21px
      height: 21px
      background-color: #008fd7
      border-radius 100%
      flex-shrink 0
      margin-right 11px
      color: #fff
      text-align: center


